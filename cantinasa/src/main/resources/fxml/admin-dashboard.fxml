<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.cantinasa.cantinasa.UI.controllers.AdminDashboardController"
      spacing="18"
      styleClass="content-area">
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Voltar" onAction="#handleBack" styleClass="secondary-button">
            <tooltip>
                <Tooltip text="Voltar para tela inicial"/>
            </tooltip>
        </Button>
        <Label text="Painel Administrativo" styleClass="section-title" alignment="CENTER_LEFT"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Sair" onAction="#handleLogout" styleClass="secondary-button">
            <tooltip>
                <Tooltip text="Sair do painel"/>
            </tooltip>
        </Button>
    </HBox>
    
    <TabPane VBox.vgrow="ALWAYS">
        <!-- Stock Management Tab -->
        <Tab text="Estoque" closable="false">
            <VBox spacing="12">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="productSearchField" promptText="Buscar produtos..." HBox.hgrow="ALWAYS"/>
                    <Button text="Adicionar Produto" onAction="#handleAddProduct" styleClass="primary-button">
                        <tooltip>
                            <Tooltip text="Adicionar novo produto ao estoque"/>
                        </tooltip>
                    </Button>
                </HBox>
                
                <TableView fx:id="stockTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="productNameColumn" text="Produto"/>
                        <TableColumn fx:id="quantityColumn" text="Quantidade"/>
                        <TableColumn fx:id="priceColumn" text="Preço"/>
                        <TableColumn fx:id="categoryColumn" text="Categoria"/>
                        <TableColumn fx:id="actionsColumn" text="Ações"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
        
        <!-- Sales Reports Tab -->
        <Tab text="Relatórios" closable="false">
            <VBox spacing="12">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <DatePicker fx:id="startDate" promptText="Data Inicial"/>
                    <DatePicker fx:id="endDate" promptText="Data Final"/>
                    <Button text="Gerar Relatório" onAction="#handleGenerateReport" styleClass="primary-button">
                        <tooltip>
                            <Tooltip text="Gerar relatório de vendas"/>
                        </tooltip>
                    </Button>
                </HBox>
                
                <TableView fx:id="reportTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Data"/>
                        <TableColumn fx:id="productColumn" text="Produto"/>
                        <TableColumn fx:id="quantityColumn" text="Quantidade"/>
                        <TableColumn fx:id="totalColumn" text="Total"/>
                    </columns>
                </TableView>
                
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="Total de Vendas:"/>
                    <Label fx:id="totalSalesLabel" styleClass="total-label"/>
                </HBox>
            </VBox>
        </Tab>
        
        <!-- User Management Tab -->
        <Tab text="Usuários" closable="false">
            <VBox spacing="12">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Adicionar Usuário" onAction="#handleAddUser" styleClass="primary-button">
                        <tooltip>
                            <Tooltip text="Adicionar novo usuário"/>
                        </tooltip>
                    </Button>
                </HBox>
                
                <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="usernameColumn" text="Usuário"/>
                        <TableColumn fx:id="nameColumn" text="Nome"/>
                        <TableColumn fx:id="roleColumn" text="Função"/>
                        <TableColumn fx:id="actionsColumn" text="Ações"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
    
</VBox> 