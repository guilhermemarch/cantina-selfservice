<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cantinasa.cantinasa.UI.controllers.ReceiptController"
      alignment="CENTER"
      spacing="24.0"
      styleClass="receipt-container">

    <padding>
        <Insets top="40" bottom="40" left="32" right="32"/>
    </padding>

    <Text text="Compra Confirmada!" styleClass="receipt-title"/>

    <Label fx:id="orderNumberLabel"
           text="Número do pedido: #12345"
           styleClass="receipt-order-number"
           wrapText="true"
           textAlignment="CENTER" />

    <Label text="Seu pedido foi processado com sucesso."
           styleClass="receipt-message"
           wrapText="true"
           textAlignment="CENTER" />

    <Button text="Voltar ao Início"
            onAction="#handleBackToHome"
            styleClass="primary-button"/>

</VBox>
